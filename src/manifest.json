{
  "manifest_version": 2,
  "icons": {
    "16": "img/16.png",
    "64": "img/64.png",
    "128": "img/128.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://shinycolors.enza.fun/*"
  ],
  "options_ui": {
    "open_in_tab": true,
    "page": "html/options.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [ "*://shinycolors.enza.fun/*" ],
      "js": [ "content.js" ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "injects.js"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
